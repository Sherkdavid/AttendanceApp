<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="150.0" prefWidth="297.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CreateDepartmentController">
   <children>
      <Label styleClass="header" text="New Department" />
      <VBox alignment="BOTTOM_RIGHT" prefHeight="123.0" prefWidth="215.0" spacing="10.0">
         <children>
            <TextField fx:id="name" prefHeight="25.0" prefWidth="155.0" promptText="Name" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="cancel" mnemonicParsing="false" onAction="#closeWindow" text="Cancel" />
                  <Button fx:id="confirm" alignment="CENTER" mnemonicParsing="false" onAction="#createDepartment" text="Confirm" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
